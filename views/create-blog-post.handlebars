  <div class="col-md-6">
    <h3>Create a Blog Post:</h3>

    <form class="form new-blog-post-form">
      <div class="form-group">
        <label for="blog-post-name">Title:</label>
        <input class="form-input" type="text" id="blog-post-name" name="blog-post-name" />
      </div>
      <div class="form-group">
        <label for="blog-post-desc">Content:</label>
        <textarea class="form-input" id="blog-post-desc" name="blog-post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>


